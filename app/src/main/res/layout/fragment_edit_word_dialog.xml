<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp"
  tools:context=".mvc.controller.fragmenst.EditWordDialogFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/edit_dialog_edit_word_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:text="Edit Word"
      android:textColor="#444"
      android:textSize="20dp"
      android:textStyle="bold"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/edit_dialog_edit_word_title"
      android:layout_alignParentEnd="true"
      android:background="@drawable/ic_edit_black_24dp"/>

    <LinearLayout
      android:layout_below="@+id/edit_dialog_edit_word_title"
      android:id="@+id/from_to_radio_group_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/border"
      android:orientation="vertical"
      android:padding="10dp">

      <RadioGroup
        android:id="@+id/edit_dialog_radio_group_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/edit_dialog_translate_from_txt"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          android:text="From: "/>

        <RadioButton
          android:id="@+id/edit_dialog_from_persian_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/persian_language_name"/>

        <RadioButton
          android:id="@+id/edit_dialog_from_english_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/english_language_name"/>

        <RadioButton
          android:id="@+id/edit_dialog_from_spanish_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/spanish_language_name"/>
      </RadioGroup>

      <RadioGroup
        android:id="@+id/edit_dialog_radio_group_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/edit_dialog_translate_to_txt"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          android:text="To: "/>

        <RadioButton
          android:id="@+id/edit_dialog_to_english_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/english_language_name"/>

        <RadioButton
          android:id="@+id/edit_dialog_to_spanish_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/spanish_language_name"/>

        <RadioButton
          android:id="@+id/edit_dialog_to_persian_radio"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/persian_language_name"/>

      </RadioGroup>

    </LinearLayout>


    <TextView
      android:id="@+id/edit_dialog_new_word_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/from_to_radio_group_layout"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Word Text:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/edit_dialog_new_word_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_new_word_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/edit_dialog_phonetic_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_new_word_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Phonetic:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/edit_dialog_phonetic_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_phonetic_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/edit_dialog_part_of_speach_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_phonetic_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Part of Speech:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/edit_dialog_part_of_speach_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_part_of_speach_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/edit_dialog_first_translation_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_part_of_speach_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Persian Translation: "
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/edit_dialog_first_translation_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_first_translation_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/edit_dialog_second_translation_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_first_translation_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Spanish Translation: "
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/edit_dialog_second_translation_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/edit_dialog_second_translation_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

  </RelativeLayout>


</ScrollView>