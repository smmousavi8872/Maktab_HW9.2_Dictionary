<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp"
  tools:context=".mvc.controller.fragmenst.AddWordDialogFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/add_word_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:text="New Word"
      android:textColor="#444"
      android:textSize="20dp"
      android:textStyle="bold"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/add_word_title"
      android:layout_alignParentEnd="true"
      android:background="@drawable/ic_add_black_28dp"/>

    <TextView
      android:id="@+id/add_word_in_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/add_word_title"
      android:layout_marginBottom="5dp"
      android:layout_marginStart="5dp"
      android:text="Add a word in:"
      android:textSize="15dp"/>

    <RadioGroup
      android:id="@+id/radio_group_add_in"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/add_word_in_text"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:background="@drawable/border"
      android:orientation="horizontal"
      android:padding="5dp"
      android:paddingEnd="15dp"
      android:paddingStart="15dp">

      <RadioButton
        android:id="@+id/add_in_persian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/persian_language_name"
        android:textSize="13dp"/>

      <RadioButton
        android:id="@+id/add_in_english"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/english_language_name"
        android:textSize="13dp"/>

      <RadioButton
        android:id="@+id/add_in_spanish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/spanish_language_name"
        android:textSize="13dp"/>
    </RadioGroup>


    <TextView
      android:id="@+id/new_word_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/radio_group_add_in"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Word Text:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/new_word_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/new_word_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:hint="New"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/phonetic_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/new_word_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Phonetic:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/phonetic_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/phonetic_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:hint="/niu:/"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/part_of_speach_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/phonetic_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Part of Speech:"
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/part_of_speach_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/part_of_speach_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:hint="verb, noun, adjective ..."
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/first_translation_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/part_of_speach_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Persian Translation: "
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/first_translation_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/first_translation_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

    <TextView
      android:id="@+id/second_translation_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/first_translation_edt"
      android:layout_marginStart="5dp"
      android:layout_marginTop="15dp"
      android:text="Spanish Translation: "
      android:textSize="15dp"/>

    <EditText
      android:id="@+id/second_translation_edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/second_translation_txt"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:textSize="16dp"/>

  </RelativeLayout>


</ScrollView>